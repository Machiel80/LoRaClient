@model IEnumerable<Betabit.Lora.Nuget.Example.ViewModels.DeviceProfileViewModel>

@{
	ViewData["Title"] = "Device profiles";
}

<div class="row">
	<div class="col-md-3">
		@Html.Partial("_LoRaSubMenu")
	</div>
	<div class="col-md-9">
		<h2>Device profiles</h2>

		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.ID)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.CommercialName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.TypeMAC)
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.ID)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CommercialName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.TypeMAC)
					</td>
				</tr>
			}
		</table>
	</div>
</div>